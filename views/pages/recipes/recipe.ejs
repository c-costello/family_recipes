<!DOCTYPE html>
<html>
  <%- include('../../layout/head.ejs') %>
  <body>
    <%- include('../../layout/header.ejs') %>
    <main>
      <h3> <%= details[0].title %> </h3>
      <p> Description: <%= details[0].description %> </p>
      <p> Added By: <%= details[0].created_by %> </p>
      <p> Source: <%= details[0].source %> </p>
      <% details.forEach( detail => { %>
        <ul>
          <li> <%= detail.ingredients %></li>
        </ul>
        <% }) %>
        <% instructions.forEach( detail => { %>
          <ul>
            <li> <%= detail.instruction %></li>
          </ul>
          <% }) %>
    </main>
    <button class="edit-recipe">Edit Recipe </button>
    <form action="" method="" class="hidden edit-recipe-form">
        <lable> Title
            <input type="text" name="title" value="<%= details[0].title %>" placeholder="<%= details[0].title %>"/>
          </lable>
          <lable> Description
            <input type="text" name="description" value="<%= details[0].description %>" placeholder="<%= details[0].description %>"/>
          </lable>
          <lable class="ingredients-label"> Ingredients
              <% details.forEach( detail => { %>
                <input type="text" name="ingredients" value="<%= detail.ingredients %>" placeholder="<%= detail.ingredients %>"/>
               <% }) %>
          </lable>
          <lable> Instructions
              <% instructions.forEach( detail => { %>
            <input type="text" name="instructions" value="<%= detail.instruction %>" placeholder="<%= detail.instruction %>"/>
           <% }) %> 
          </lable>
          <lable> Name
            <input type="text" name="created_by"/>
          </lable>
          <lable> Source
            <input type="text" name="source"/>
          </lable>
          <label> Edited By
            <input type="text" name="edited_by"/>
          </label>
          <label> Edited On
              <input type="text" name="edited_on"/>
            </label>
          <button> Save Changes </button>
    </form>
    <%- include('../../layout/footer.ejs') %>
  </body>
</html>